<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimary">

            <include layout="@layout/toolbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:background="@drawable/btn_white">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="match name"
                    android:layout_weight="1"
                    android:id="@+id/match_name"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/text_color"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorPrimary"
                    android:text="00:00:00"
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/timeRemaining"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Prize Pool"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left"
                                    android:textAllCaps="true"
                                    android:textSize="9dp"
                                    android:textColor="@color/font_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:text=""
                                    android:gravity="left"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_color"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:id="@+id/prizeMoney"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:id="@+id/winnerLL"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Winners"
                                    android:textAllCaps="true"
                                    android:textSize="9dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/font_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/blue"
                                    android:id="@+id/numWinners"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0px"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:text="Entry"
                                    android:textSize="9dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:id="@+id/t3"
                                    android:gravity="right"
                                    android:textColor="@color/font_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:gravity="right"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/main_green_color"
                                    android:id="@+id/entryFee"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#999"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="1dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/myteamsLL"
                            android:layout_marginTop="1px"
                            android:orientation="vertical"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1px"
                            android:id="@+id/cll"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="18dp"
                                android:textSize="11dp"
                                android:text="C"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/b_bg"
                                android:layout_height="18dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/font_color"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="9dp"
                                android:layout_gravity="center_vertical"
                                android:text="Confirmed winnings even if the contest remains unfilled"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/mll"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="18dp"
                                android:textSize="11dp"
                                android:text="M"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/b_bg"
                                android:layout_height="18dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/font_color"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="9dp"
                                android:layout_gravity="center_vertical"
                                android:text="Join with Multiple teams"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/bll"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="18dp"
                                android:textSize="11dp"
                                android:text="B"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/b_bg"
                                android:layout_height="18dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:textColor="@color/font_color"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="9dp"
                                android:id="@+id/bonusText"
                                android:layout_gravity="center_vertical"
                                android:text="Bonus"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/teamEnteredPB"
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:progress="0"
                                android:progressTint="@color/main_green_color"
                                android:max="16"
                                android:layout_height="wrap_content"
                                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="8dp"
                                    android:textColor="#444"
                                    android:text=""
                                    android:fontFamily="@font/montserrat_regular"
                                    android:id="@+id/teamsLeft"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="8dp"
                                    android:textColor="#444"
                                    android:text=""
                                    android:fontFamily="@font/montserrat_regular"
                                    android:id="@+id/totalTeams"/>

                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:textColor="#fff"
                            android:text="join this contest"
                            android:id="@+id/btnJoin"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/btn_green"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/font_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:background="#fff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:id="@+id/lb"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="View the selected players of all teams after deadline. No team changes post that."
                            android:textSize="10dp"
                            android:textColor="@color/text_color"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="100dp"
                            android:text="View Teams"
                            android:id="@+id/totalteamsLB"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:textAllCaps="true"
                            android:background="@drawable/btn_gray"
                            android:textColor="@color/white"
                            android:layout_height="30dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/table_header1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Team"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"/>

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rank"
                            android:padding="8dp"
                            android:gravity="right"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"/>

                    </LinearLayout>

                </LinearLayout>

                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    app:tabTextAppearance="@style/TabLayoutStyle"
                    android:id="@+id/tabLayout"
                    style="@style/TabLayoutStyle3"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabMode="fixed"
                    app:tabIndicator="@color/colorPrimary"
                    app:tabIndicatorHeight="2dp"
                    android:background="@color/white"/>

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/viewPager"
                    android:layout_marginTop="1px"/>


            </LinearLayout>





            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="10dp"
                android:visibility="gone"
                android:src="@drawable/ic_up_arrow"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:backgroundTint="@color/colorPrimary"
                android:foregroundTint="@color/colorPrimary"
                android:layout_margin="10dp"
                android:id="@+id/fab"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Invite"
                android:visibility="gone"
                android:id="@+id/btnInvite"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@color/blue"/>

            <Button
                android:layout_width="0px"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Join +"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/btnJoinAgain"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@color/main_green_color"/>

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/pricecard_bottomsheet"/>
</android.support.design.widget.CoordinatorLayout>