<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="match_parent"
    tools:context=".Activity.AllChallengesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimary">

            <include layout="@layout/toolbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:background="@drawable/btn_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="match name"
                    android:id="@+id/match_name"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/text_color"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/colorPrimary"
                    android:text="00:00:00"
                    android:id="@+id/timeRemaining"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:id="@+id/guru"
                    android:text="GURU"
                    android:textColor="@color/text_color"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Contests"
            android:padding="8dp"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/montserrat_semibold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="16 Contest available"
                android:textSize="12dp"
                android:id="@+id/totalContests"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="All Filters"
                android:textColor="@color/text_color"
                android:drawableRight="@drawable/ic_controls"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/filter1"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="3dp"
            android:elevation="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winnings"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/winning"
                android:textColor="#444f5b"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teams"
                android:id="@+id/teams"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#444f5b"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winners"
                android:textAllCaps="true"
                android:textColor="#444f5b"
                android:id="@+id/winners"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Entry"
                android:id="@+id/entry"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#444f5b"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swipeRefreshLayout"
                >

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#0444"
                    android:dividerHeight="0px"
                    android:scrollbars="none"
                    android:id="@+id/challengeList"/>

            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/createTeamLL"
            android:background="@color/blue"
            android:padding="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Create Team"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:id="@+id/btnCreateTeam"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:textColor="@color/blue"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@drawable/btn_white"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/myteamll"
            android:visibility="gone"
            android:elevation="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/myTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="11dp"
                    android:textAllCaps="true"
                    android:layout_marginBottom="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="0"
                    android:background="@drawable/m_bg"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="11dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="My Teams"
                    android:textColor="@color/font_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="11dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:text="Create Team"
                    android:textColor="@color/font_color" />

            </LinearLayout>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#aaa"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/joinedll"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/totalJoined"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12dp"
                    android:textAllCaps="true"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:textStyle="bold"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="0"
                    android:background="@drawable/m_bg"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Joined Contests"
                    android:textColor="@color/font_color" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:id="@+id/bottom_sheet1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingBottom="45dp"
                android:clipToPadding="false"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Close"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textSize="13dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/closeFilter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filters"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Reset"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textSize="13dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/resetFilter"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="Entry"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:padding="8dp"/>

                <com.img.mybat11.Api.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/entryGrid"
                    android:numColumns="2"
                    android:padding="8dp"
                    android:horizontalSpacing="4dp"
                    android:verticalSpacing="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="Number of Teams"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:padding="8dp"/>

                <com.img.mybat11.Api.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberOfTeamsGrid"
                    android:numColumns="2"
                    android:padding="8dp"
                    android:horizontalSpacing="4dp"
                    android:verticalSpacing="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="Prize Pool"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:padding="8dp"/>

                <com.img.mybat11.Api.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/prizePoolGrid"
                    android:numColumns="2"
                    android:padding="8dp"
                    android:horizontalSpacing="4dp"
                    android:verticalSpacing="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="Contest Type"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:padding="8dp"/>

                <com.img.mybat11.Api.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contestTypeGrid"
                    android:numColumns="2"
                    android:padding="8dp"
                    android:horizontalSpacing="4dp"
                    android:verticalSpacing="4dp"/>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Apply"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_semibold"
                android:id="@+id/btnApply"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:elevation="3dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_green"
                android:layout_gravity="center"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:visibility="gone"
        android:background="#fff"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Price Card"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/close"
                    android:text="Close"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAllCaps="true"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prize Pool"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prize Pool"
                android:gravity="center"
                android:id="@+id/totalPrizeAmount"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_semibold"/>

            <com.img.mybat11.Api.ExpandableHeightListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/priceCard"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: The actual price money may be different than the prize money mentioned above if there is a tie for any of the winning position. Check FAQs for further details. As per government regulations, a tax of 31.2% will be deducted if an individual wins more than â‚¹ 10,000."
                android:textColor="#666"
                android:textSize="9dp"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="5dp"
                android:gravity="center"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
