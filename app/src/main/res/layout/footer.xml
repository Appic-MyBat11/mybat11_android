<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:elevation="8dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/homeLL"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/home"
                android:src="@drawable/home_deselected"/>

            <TextView
                android:id="@+id/homeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="Home"
                android:textAllCaps="true"
                android:textColor="@color/font_color"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/contestLL"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/contest"
                android:src="@drawable/my_contest_deselected"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Contest"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/contestText"
                android:textColor="@color/font_color"
                android:textSize="10dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/meLL"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/me"
                android:src="@drawable/me_deselected"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textAllCaps="true"
                android:textColor="@color/font_color"
                android:id="@+id/meText"
                android:textSize="12dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/feedLL"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/feed"
                android:src="@drawable/ic_person"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="PROFILE"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/font_color"
                android:id="@+id/feedText"
                android:textSize="10dp"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/moreLL"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/more"
                android:src="@drawable/ic_more_deselected"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="More"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/font_color"
                android:id="@+id/moreText"
                android:textSize="10dp"
                android:gravity="center"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>