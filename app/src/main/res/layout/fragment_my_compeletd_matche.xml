<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MyCompeletdMatchesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/matchList"
            android:dividerHeight="0px"
            android:divider="#0fff"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/nomatchlay"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/nomatchupper"
                android:layout_height="wrap_content"
                android:text="You haven't joined any upcoming contests"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/gray_font_color"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:id="@+id/nomatchimg"
                android:layout_marginBottom="20dp"
                android:src="@drawable/no_matches"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nomatchdown"
                android:text="Join contest for any of the upcoming match"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/gray_font_color"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Upcoming Matches"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:id="@+id/nomatchbtn"
                android:paddingBottom="10dp"
                android:textAllCaps="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_button_background"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"

                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
