<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/header"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1.6"
            android:textColor="@color/text_color"
            android:text="Jan 20,2018"
            android:gravity="center_vertical"
            android:id="@+id/date"
            android:fontFamily="@font/montserrat_regular"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_weight="1.6"
            android:textColor="@color/text_color"
            android:text="Pending"
            android:gravity="center_vertical"
            android:id="@+id/status"
            android:fontFamily="@font/montserrat_regular"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:text="â‚¹ 1200"
            android:id="@+id/credit"
            android:paddingTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="0px"
            android:layout_weight="0.3"
            android:id="@+id/expand"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_expand_white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/infoLL"
        android:padding="5dp"
        android:background="@color/lightgray"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/transactionID"
            android:padding="5dp"
            android:textSize="12dp"
            android:text="Transaction id : VB18/rt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:id="@+id/teamName"
            android:fontFamily="@font/montserrat_regular"
            android:padding="5dp"
            android:textSize="12dp"
            android:text="Team Name : XYZ"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:elevation="6dp"
            android:visibility="gone"
            android:id="@+id/doneinvoice"
            app:cardCornerRadius="2dp"
            android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/gray_btn_bg_pressed_color"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="14dp"
                android:text="EMAIL INVIOCE"

                />


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
