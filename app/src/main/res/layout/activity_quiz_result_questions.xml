<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.QuizResultQuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimary">

            <include layout="@layout/toolbar"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:background="@drawable/btn_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="match name"
                    android:id="@+id/match_name"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/text_color"
                    android:text="00:00:00"
                    android:id="@+id/timeRemaining"/>

            </RelativeLayout>

        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/nestedscroll"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:id="@+id/questionlayout"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="@color/colorPrimary">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"  >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:gravity="center_vertical"
                                        android:text="⏰ Quiz Complete in"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_alignParentRight="true"
                                        android:gravity="center_vertical"
                                        android:background="@drawable/btn_white"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:textColor="@color/text_color"
                                        android:text="00:00"
                                        android:textSize="16dp"
                                        android:paddingRight="15px"
                                        android:paddingLeft="15px"
                                        android:id="@+id/timeRemaining1"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"
                                        app:cardCornerRadius="6dp"
                                        android:elevation="6dp"

                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:padding="10dp"
                                            android:gravity="center"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:id="@+id/ttlquestion"
                                                android:textSize="14dp"
                                                android:textColor="@color/colorAccent"
                                                android:fontFamily="@font/montserrat_semibold"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Total Questions"
                                                android:textSize="11dp"
                                                android:textColor="@color/font_color"
                                                android:fontFamily="@font/montserrat_regular"/>



                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"
                                        app:cardCornerRadius="6dp"
                                        android:elevation="6dp"

                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:padding="10dp"
                                            android:gravity="center"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:id="@+id/misquestion"
                                                android:textSize="14dp"
                                                android:textColor="@color/winner"
                                                android:fontFamily="@font/montserrat_semibold"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Missed Questions"
                                                android:textSize="11dp"
                                                android:textColor="@color/font_color"
                                                android:fontFamily="@font/montserrat_regular"/>



                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        app:cardCornerRadius="6dp"
                                        android:elevation="6dp"

                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:padding="10dp"
                                            android:gravity="center"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:id="@+id/attamptquestion"
                                                android:textSize="14dp"
                                                android:textColor="@color/colorAccent"
                                                android:fontFamily="@font/montserrat_semibold"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Attempted Questions"
                                                android:textSize="11dp"
                                                android:textColor="@color/font_color"
                                                android:fontFamily="@font/montserrat_regular"/>



                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>
                                    <android.support.v7.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        app:cardCornerRadius="6dp"
                                        android:elevation="6dp"

                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:padding="10dp"
                                            android:gravity="center"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:id="@+id/rightanswers"
                                                android:textSize="14dp"
                                                android:textColor="@color/main_green_color"
                                                android:fontFamily="@font/montserrat_semibold"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Right Answers"
                                                android:textSize="11dp"
                                                android:textColor="@color/font_color"
                                                android:fontFamily="@font/montserrat_regular"/>



                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>



                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        app:cardCornerRadius="6dp"
                                        android:elevation="6dp"

                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:padding="5dp"
                                            android:gravity="center"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:gravity="center_vertical"
                                                android:orientation="horizontal">


                                                <RadioButton
                                                    android:layout_width="0dp"
                                                    android:layout_weight="1"
                                                    android:layout_height="wrap_content"
                                                    android:checked="true"
                                                    android:textSize="10dp"
                                                    android:fontFamily="@font/montserrat_semibold"
                                                    android:textColor="@color/main_green_color"
                                                    android:text="Correct"
                                                    android:buttonTint="@color/main_green_color"/>
                                                <RadioButton
                                                    android:layout_width="0dp"
                                                    android:layout_weight="1"
                                                    android:layout_height="wrap_content"
                                                    android:checked="true"
                                                    android:textColor="@color/colorAccent"
                                                    android:text="Right Answers"
                                                    android:textSize="10dp"
                                                    android:fontFamily="@font/montserrat_semibold"
                                                    android:buttonTint="@color/colorAccent"/>
                                                <RadioButton
                                                    android:layout_width="0dp"
                                                    android:layout_weight="1"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/montserrat_semibold"
                                                    android:checked="true"
                                                    android:textColor="@color/colorPrimary"
                                                    android:text="Wrong Answers"
                                                    android:textSize="10dp"
                                                    android:buttonTint="@color/colorPrimary"/>
                                                <RadioButton
                                                    android:layout_width="0dp"
                                                    android:layout_weight="1"
                                                    android:layout_height="wrap_content"
                                                    android:checked="true"
                                                    android:textColor="@color/winner"
                                                    android:fontFamily="@font/montserrat_semibold"
                                                    android:textSize="10dp"
                                                    android:text="Missed"
                                                    android:buttonTint="@color/winner"/>



                                            </LinearLayout>


                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>



                                </LinearLayout>



                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>



                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#0444"
                        android:dividerHeight="0px"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:scrollbars="none"
                        android:id="@+id/challengeList"/>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="6dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="15dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Your Score"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:textColor="@color/gray_btn_bg_pressed_color"
                                android:fontFamily="@font/montserrat_semibold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:gravity="center"
                                android:id="@+id/yourscore"
                                android:textSize="30dp"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/montserrat_bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Points"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:textColor="@color/gray_font_color"
                                android:fontFamily="@font/montserrat_semibold"/>



                        </LinearLayout>
                    </android.support.v7.widget.CardView>



                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>




    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Total Points Earned: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:id="@+id/ttlpnts"
            android:text=""/>


    </LinearLayout>


</LinearLayout>
