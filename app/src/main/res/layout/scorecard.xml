<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:elevation="5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="6dp"
        android:id="@+id/scorell"
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORECARD"
            android:padding="2dp"
            android:textColor="@color/gray_font_color"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/team1"
                    android:textColor="@color/text_color"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="2dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/team1Score"
                    android:textColor="@color/text_color"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/team1Overs"
                    android:textColor="@color/font_color"
                    android:textSize="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="2dp"
                    android:id="@+id/team2"
                    android:textColor="@color/text_color"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="2dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/team2Score"
                    android:textColor="@color/text_color"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="2dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/team2Overs"
                    android:textColor="@color/font_color"
                    android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/montserrat_regular"
            android:padding="2dp"
            android:id="@+id/finalResult"
            android:textColor="@color/text_color"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f0f0f0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   View Player Stats"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="11dp"
            android:drawableLeft="@drawable/score_small"
            android:id="@+id/playerStats"
            android:drawableRight="@drawable/ic_right"
            android:textColor="@color/colorAccent"
            android:padding="5dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
