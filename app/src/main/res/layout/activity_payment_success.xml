<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Api.PaymentSuccess">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/successll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="18dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Payment Successfull !!"
                        android:textColor="@color/main_green_color"
                        android:textSize="20dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/border_color_social"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:id="@+id/t1"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="10dp"
                        android:text="Transaction Id"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/paymentID"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/text_color" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/border_color_social" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="10dp"
                        android:text="Email "
                        android:id="@+id/t2"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/useremail"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/text_color" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/border_color_social" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:padding="10dp"
                        android:id="@+id/t3"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Amount"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/payamonut"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/text_color" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bdbdbd" />

            </LinearLayout>


        </LinearLayout>






</LinearLayout>
