<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/popupforlangage"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:elevation="6dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="20dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">




                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/watch"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Successfully Joined"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Would you like to set remainder for quiz start?"
                            android:textSize="14dp"
                            android:layout_marginTop="20dp"
                            android:id="@+id/startpopuptime"
                            android:textColor="@color/font_color"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:textSize="12dp"
                                android:text="Before: "
                                android:textColor="@color/colorPrimary"/>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                app:cardCornerRadius="6dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:id="@+id/one"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/white"
                                    android:background="@drawable/btn_primer"
                                    android:layout_height="match_parent"
                                    android:text="1 Min"/>

                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                app:cardCornerRadius="6dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:id="@+id/two"
                                    android:background="@drawable/btn_gray_border"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/font_color"
                                    android:layout_height="match_parent"
                                    android:text="2 Min"/>

                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                app:cardCornerRadius="6dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:id="@+id/five"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/font_color"
                                    android:background="@drawable/btn_gray_border"
                                    android:layout_height="match_parent"
                                    android:text="5 Min"/>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >


                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="20dp"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:id="@+id/no"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textColor="@color/white"
                                    android:background="@drawable/btn_blakr"
                                    android:layout_height="match_parent"
                                    android:text="NO"/>

                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:id="@+id/yes"
                                    android:padding="5dp"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textColor="@color/white"
                                    android:background="@drawable/btn_primer"
                                    android:layout_height="match_parent"
                                    android:text="Yes"/>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>



            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>