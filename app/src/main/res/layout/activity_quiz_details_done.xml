<android.support.design.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.DetailsResultActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimary">

            <include layout="@layout/toolbar"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:background="@drawable/btn_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="match name"
                    android:id="@+id/match_name"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/text_color"
                    android:text="00:00:00"
                    android:id="@+id/timeRemaining"/>

            </RelativeLayout>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Prize Pool"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left"
                                    android:textAllCaps="true"
                                    android:textSize="9dp"
                                    android:textColor="@color/text_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textColor="@color/text_color"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textSize="12dp"
                                    android:id="@+id/prizeMoney"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:id="@+id/winnerLL"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Winners"
                                    android:textAllCaps="true"
                                    android:textSize="9dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/text_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:gravity="center"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/blue"
                                    android:id="@+id/numWinners"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0px"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Entry Fee"
                                    android:textSize="9dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="right"
                                    android:textColor="@color/text_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:gravity="right"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/colorAccent"
                                    android:id="@+id/entryFee"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#999"
                            android:layout_marginLeft="15dp"
                            android:visibility="gone"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="3dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2px"
                            android:id="@+id/cll"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="20dp"
                                android:textSize="10dp"
                                android:text="C"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/b_bg"
                                android:layout_height="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="10dp"
                                android:layout_gravity="center_vertical"
                                android:text="This contest won't cancel if doesn't fill up"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/mll"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="20dp"
                                android:textSize="10dp"
                                android:text="M"
                                android:layout_margin="5dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/b_bg"
                                android:layout_height="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="10dp"
                                android:layout_gravity="center_vertical"
                                android:text="You can join this contest with more than one team"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/teamEnteredPB"
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:progress="0"
                                android:progressTint="@color/main_green_color"
                                android:max="16"

                                android:layout_height="wrap_content"
                                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="10dp"
                                    android:textColor="#444"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text=""
                                    android:id="@+id/teamsLeft"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10dp"
                                    android:textColor="#444"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text=""
                                    android:id="@+id/totalTeams"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    app:tabTextAppearance="@style/TabLayoutStyle"
                    android:id="@+id/tabLayout"
                    style="@style/TabLayoutStyle3"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabMode="fixed"
                    app:tabIndicator="@color/colorPrimary"
                    app:tabIndicatorHeight="2dp"
                    android:background="@color/white"/>

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewPager"
                    android:layout_marginTop="1px"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="10dp"
                android:src="@drawable/ic_up_arrow"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:backgroundTint="@color/colorPrimary"
                android:foregroundTint="@color/colorPrimary"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:id="@+id/fab"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text=" Dream Team"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/btnDreamTeam"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_stars"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="Tell Your Friends"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/btnInvite"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/winner"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:background="#fff"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Price Card"
                    android:background="@color/colorAccent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/close"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Close"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

            <com.img.mybat11.Api.ExpandableHeightListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/priceCard"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: The actual price money may be different than the prize money mentioned above if there is a tie for any of the winning position. Check FAQs for further details. As per government regulations, a tax of 31.2% will be deducted if an individual wins more than ₹ 10,000."
                android:textColor="#666"
                android:textSize="11dp"
                android:fontFamily="@font/montserrat_regular"
                android:padding="5dp"
                android:gravity="center"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
