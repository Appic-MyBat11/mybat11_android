<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.mobileVarificationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:id="@+id/mobileVerify"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_smartphone_red"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:id="@+id/t7"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="Verify Your Mobile"
                            />

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:id="@+id/mobileNumber"
                        style="@style/StyledTilEditText2"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:maxLength="10"
                            android:fontFamily="@font/montserrat_semibold"
                            android:hint="Mobile number"
                            android:textSize="14dp"
                            android:textColor="@color/text_color"
                            android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"
                        android:id="@+id/t8"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#999"
                        android:textSize="12dp"
                        android:text="We will send you a 4 digit OTP for verification."/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send OTP"
                        android:padding="5dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:id="@+id/verifyMobile"
                        android:background="@color/main_green_color"
                        android:textColor="@color/white"
                        android:layout_margin="15dp"
                        android:gravity="center"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="6dp"
                android:visibility="gone"
                    android:id="@+id/mobileVerified"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@drawable/green_border"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_smartphone_green"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:id="@+id/t9"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="Your mobile number is verified"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mobileText"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/main_green_color"
                            android:textSize="14dp"
                            android:text="&#10004; Your mobile number is already verified."/>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/emailVerify"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email_red"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/t1"
                            android:typeface="sans"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/text_color"
                            android:text="Verify Your Email"
                            />

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:id="@+id/email"
                        style="@style/StyledTilEditText2"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:hint="Email ID"
                            android:editable="false"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="14dp"
                            android:textColor="@color/text_color"
                            android:inputType="textEmailAddress"/>

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:id="@+id/t2"
                        android:textColor="#999"
                        android:textSize="12dp"
                        android:text="We will send you a 4 digit OTP for verification."/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send OTP"
                        android:padding="5dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:id="@+id/verifyEmail"
                        android:background="@color/main_green_color"
                        android:textColor="@color/white"
                        android:layout_margin="15dp"
                        android:gravity="center"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="6dp"
                android:visibility="gone"
                android:id="@+id/emailVerified"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@drawable/green_border"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_email_green"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="Your Email address is verified"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/emailText"
                            android:textColor="@color/main_green_color"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="14dp"
                            android:text=""/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/imageLayout"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/imagetitle"
                            android:typeface="sans"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/text_color"
                            android:text="Uplaod User Image"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="80dp"
                            android:id="@+id/userImage"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/avtar"/>

                        <LinearLayout
                            android:layout_width="30dp"
                            android:padding="5dp"
                            android:id="@+id/camera"
                            android:layout_marginLeft="-90px"
                            android:layout_marginBottom="-65px"
                            android:background="@drawable/white_circle"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_camera"

                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="this is the reson"
                            android:id="@+id/reson"
                            android:visibility="gone"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="12dp"

                            />
                    </LinearLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
