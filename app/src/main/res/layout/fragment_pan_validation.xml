<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.PanValidationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardVerified"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_credit_card_red"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/t1"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="Verify your PAN Details"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/panVerified"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/main_green_color"
                        android:textSize="14dp"
                        android:text="&#10004; Your PAN Card details are already verified."/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardDetails"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:id="@+id/t"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="PAN Card"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Name"
                                android:id="@+id/nameText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/panname"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="PAN Number"
                                android:id="@+id/numberText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/number"
                                android:text="number"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="DOB"
                                android:id="@+id/dobText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/pandob"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="136dp"
                            android:layout_height="136dp"
                            android:id="@+id/pancard"
                            android:layout_gravity="center"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="1dp"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/red"
                            android:textSize="14dp"
                            android:id="@+id/comment"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="Your PAN card is rejected"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_margin="2dp"
                            android:textColor="@color/text_color"
                            android:id="@+id/imageText"
                            android:text="Click on image to view full size image."
                            android:gravity="right"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="6dp"
                android:visibility="gone"
                app:cardElevation="6dp"
                android:id="@+id/cardNotVerified"
                android:layout_margin="5dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/notVerified"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_credit_card_red"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:id="@+id/t2"
                                android:fontFamily="@font/montserrat_semibold"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:typeface="sans"
                                android:textColor="@color/text_color"
                                android:text="Verify your PAN Details"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/select_image"
                            android:layout_marginTop="5dp"
                            android:id="@+id/img"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:textColor="#fff"
                            android:textSize="16dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:id="@+id/btnUpload"
                            android:text="Upload PAN CARD Image"
                            android:layout_marginTop="22dp"
                            android:background="@color/winner"/>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="1px"
                            android:id="@+id/uimage"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/t3"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#aaa"
                            android:textSize="10dp"
                            android:padding="2dp"
                            android:text="Image size up to 4mb*"/>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/name"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Name*"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:textSize="14dp"
                                android:inputType="textCapCharacters"
                                android:textColor="@color/text_color" />

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="18dp"
                            android:textColor="#999"
                            android:id="@+id/t4"
                            android:layout_marginBottom="5dp"
                            android:textSize="10dp"
                            android:text="As on PAN Card"/>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/panNumber"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:maxLength="10"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                                android:textSize="14dp"
                                android:inputType="textCapCharacters"
                                android:hint="PAN number*"
                                android:textColor="@color/text_color" />

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="18dp"
                            android:textColor="#999"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:id="@+id/t5"
                            android:textSize="10dp"
                            android:text="Your 10 digit PAN card details"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="#999"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:id="@+id/dob"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="13dp"
                            android:textSize="14dp"
                            android:text="Date of birth*"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#999"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="#999"
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:id="@+id/t6"
                        android:text="* All fields are mandatory"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit for Verification"
                        android:id="@+id/btnSubmit"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="10dp"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:layout_margin="15dp"
                        android:gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/invalidRequest"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_credit_card_red"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/t7"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="Verify your PAN Details"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/text_color"
                        android:id="@+id/t8"
                        android:textSize="14dp"
                        android:text="To update your PAN card details please complete the steps mentioned below :"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:id="@id/t9"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="8dp"
                        android:lineSpacingExtra="10px"
                        android:text="\u2022 Verify your mobile number.\n\u2022 verify your Email Id\n\u2022 Complete your profile"
                        android:textColor="#555"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
