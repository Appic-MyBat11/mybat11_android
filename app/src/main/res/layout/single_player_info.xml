<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="6dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="80dp"
                    android:id="@+id/playerImage"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="16dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:id="@+id/playerName"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:id="@+id/selectper"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="points"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:id="@+id/playerPoints"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#f5f5f5"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="Role"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="points"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Starting 11"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/startingPoint"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Runs"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/runPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="4's"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:fontFamily="@font/montserrat_regular"
                            android:id="@+id/fourPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="6's"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/sixPoints"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Strike Rate"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/strikeRatePoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="50/100"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/points50"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Duck"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/duckPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Wickets"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/wicketspoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Maiden Overs"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/maidenPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Economy Rate"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/economypoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Thrower"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/throwerPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Hitter"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/hitterPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Catch"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/catchPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:padding="8dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:text="Stumping"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:id="@+id/stumpingPoints"
                            android:textColor="@color/text_color"
                            android:textSize="12dp"
                            android:padding="8dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>