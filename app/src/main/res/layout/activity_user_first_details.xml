<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserFirstDetailsActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Name"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/teamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:gravity="left"
                android:hint="Team Name"
                android:inputType="text"
                android:maxLength="9"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textColorHint="@color/font_color"
                android:textSize="14dp"
                android:background="@drawable/border_bottom_profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:gravity="left"
                android:hint="Date of Birth"
                android:background="@drawable/border_bottom_profile"
                android:inputType="text"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/india_states"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/border_bottom_profile"
                android:id="@+id/state"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Play pay-to-pay contests, you need to be 18 Years or above, and not a resident of Assam,Nagaland,Odisha,Sikkim or Telangana."
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/text_color"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/createTeamLL"
        android:background="@color/colorAccent"
        android:padding="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Create Profile"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textAllCaps="false"
            android:id="@+id/btnCreateProfile"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/btn_white"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>