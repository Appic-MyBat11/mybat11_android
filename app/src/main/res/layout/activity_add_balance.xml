<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.AddBalanceActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:text="Add Cash"
                    android:fontFamily="@font/montserrat_semibold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Enter amount to add"
                    android:textColor="@color/font_color"
                    android:textSize="14dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:textColorHint="@color/font_color"
                    android:id="@+id/addMoney"
                    android:background="@drawable/black_border"
                    style="@style/StyledTilEditText"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:hint="Amount"
                        android:textColor="@color/text_color"
                        android:text=""
                        android:maxLength="6"
                        android:background="#0000"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColorHint="@color/font_color"
                        android:textSize="14dp"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Choose amount to add"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text=" + 100 "
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/add10"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/text_color"
                        android:background="@drawable/black_border"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text=" + 200 "
                        android:id="@+id/add50"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/text_color"
                        android:background="@drawable/black_border"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text=" + 500 "
                        android:id="@+id/add100"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/text_color"
                        android:background="@drawable/black_border"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Offer To Get Bonus: "
                    android:textColor="@color/text_color"
                    android:textSize="12dp"
                    android:id="@+id/offersText"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/offers"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:id="@+id/offersLL"/>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:background="@drawable/paytm_button"
                        android:textColor="@color/white"
                        android:id="@+id/btnAddCash"/>
                    <Button
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:background="@drawable/cashfree_button"
                        android:textColor="@color/white"
                        android:id="@+id/btnAddCashfree"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:background="@drawable/razor"
                        android:textColor="@color/white"
                        android:id="@+id/btnAddRazorpay"/>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>