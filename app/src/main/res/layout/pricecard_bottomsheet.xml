<android.support.v4.widget.NestedScrollView
    android:id="@+id/bottom_sheet1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:visibility="gone"
    android:background="#fff"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Price Card"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/close"
                android:text="Close"
                android:fontFamily="@font/montserrat_semibold"
                android:textAllCaps="true"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prize Pool"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prize Pool"
            android:gravity="center"
            android:id="@+id/totalPrizeAmount"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_semibold"/>

        <com.img.mybat11.Api.ExpandableHeightListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/priceCard"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: The actual price money may be different than the prize money mentioned above if there is a tie for any of the winning position. Check FAQs for further details. As per government regulations, a tax of 31.2% will be deducted if an individual wins more than â‚¹ 10,000."
            android:textColor="#666"
            android:textSize="9dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="5dp"
            android:gravity="center"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
