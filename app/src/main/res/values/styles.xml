<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="StyledTilEditTextTheme2">
        <item name="colorControlNormal">#444</item>
        <item name="colorControlActivated">#444</item>
    </style>

    <style name="StyledTilEditText2">
        <item name="android:theme">@style/StyledTilEditTextTheme2</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:titleTextColor" tools:targetApi="m">#ffffff</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/float_transparent</item>
        <item name="android:bottomDark">@color/float_transparent</item>
        <item name="android:bottomMedium">@color/float_transparent</item>
        <item name="android:centerBright">@color/float_transparent</item>
        <item name="android:centerDark">@color/float_transparent</item>
        <item name="android:centerMedium">@color/float_transparent</item>
        <item name="android:fullBright">@color/float_transparent</item>
        <item name="android:fullDark">@color/float_transparent</item>
        <item name="android:topBright">@color/float_transparent</item>
        <item name="android:topDark">@color/float_transparent</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/google_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TabLayoutStyle2" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="spinnerStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:state_activated">@color/white</item>
    </style>

    <style name="helperText">
        <item name="android:textSize">8dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="TabLayoutStyle1" parent="android:Widget">
        <!--<item name="tabBackground">@drawable/tab_background</item>-->
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="TabLayoutStyle3" parent="android:Widget">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>

</resources>
