<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OTPActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text=""
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:layout_margin="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/text_color"
                    android:textSize="15dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_height="wrap_content"
                    android:text="Enter the OTP you received"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="15sp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <com.mukesh.OtpView
                        android:id="@+id/otp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/text_color"
                        android:textSize="18dp"
                        android:fontFamily="@font/montserrat_regular"
                        app:itemCount="4"
                        app:lineColor="@color/border_color_social"
                        app:viewType="rectangle"
                        />

                    <!--<com.broooapps.otpedittext2.OtpEditText-->
                        <!--android:layout_width="200dp"-->
                        <!--android:textAlignment="center"-->
                        <!--android:layout_height="60dp"-->
                        <!--android:maxLength="4"-->
                        <!--android:textIsSelectable="false"-->
                        <!--android:digits="0123456789"-->
                        <!--android:textSize="14dp"-->
                        <!--android:inputType="number"-->
                        <!--android:id="@+id/otp"-->
                        <!--android:textColor="@color/text_color"-->
                        <!--android:paddingBottom="8dp"-->
                        <!--app:oev_text_color="@color/gray_btn_bg_color"-->
                        <!--android:shadowColor="@color/gray_btn_bg_color"-->
                        <!--app:oev_primary_color="@color/gray_btn_bg_color"-->
                        <!--/>-->



                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="14dp"
            android:id="@+id/timer"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/design_default_color_primary"
            android:text="Didn't received the OTP?"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Verify"
        android:textSize="16dp"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_semibold"
        android:id="@+id/btnVerify"
        android:layout_height="wrap_content" />

</LinearLayout>
