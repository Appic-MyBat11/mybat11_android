<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainli"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:id="@+id/imageback"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_height="fill_parent"
                android:src="@drawable/quizlistimage"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8th April 10:20Am Quiz"
                        android:id="@+id/maindate"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="17dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quiz Date: 2020-04-08 12:15:00"
                        android:textColor="@color/white"
                        android:id="@+id/date"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020-04-08 12:15:00"
                            android:textColor="@color/white"
                            android:id="@+id/timer"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/noofquestion"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12dp"/>



                    </LinearLayout>



                </LinearLayout>



            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>